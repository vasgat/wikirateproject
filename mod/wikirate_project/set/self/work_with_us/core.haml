%section#work-with-us-header
  .bg-transparent-gray.p-5
    .container.p-5
      = render_breadcrumbs
      = section_header :work_with_us_heading, header_size: :h1

%section.p-5
  .container
    .row.lead.pb-3
      = nest :opportunities, view: :titled
    .row.lead.pb-3
      = nest :vacancies, view: :titled
    .row
      - :open_position.card.item_cards.each do |item|
        - if Date.parse(item.date) > Time.now
          .col-md-6.p-3.ps-4.pe-4
            = nest item, view: :core
